<h1>Reccomend a brand!</h1>

<%= form_for(@brand) do |f| %>
    <div>
    <%= f.label :review %>
    <%= f.text_field :review %>
    </div>
    <br><br>

    <p> Select a brand that already exists: </p> 
    <div>
        <%= f.collection_select :brand_id_id, Brand.all, :id, :name %>
    </div>
    <br>

    <p> Or create a new brand: </p> 
    <div>
        <%= f.fields_for :brand do |b| %>
            <%= b.label :name %>
            <%= b.text_field :name %>
            <br>
            <%= b.label :category %>
            <%= b.text_field :category %>
            <br>
            <%= b.label :info %>
            <%= b.text_field :info %>
        <% end %>
    </div>
    <br><br> 

    <%= f.submit %>

<% end %>
