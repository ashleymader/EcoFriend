<h1>Recommend a brand!</h1>

<% if @brand.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@brand.errors.count, "error") %>
      prohibited this brand from being saved:
    </h2>
 
    <ul>
    <% @brand.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@brand) do |f| %>
    
            <%= f.label :name %>
            <%= f.text_field :name %>
            <br>
            <%= f.label :category %>
            <%= f.text_field :category %>
            <br>
            <%= f.label :info %>
            <%= f.text_field :info %>
    <br><br>

     <%= f.fields_for :comment do |c| %>
            <div>
            <%= c.label :review %>
            <%= c.text_area :review, size: "25x10" %>
            </div>
            <% end %>
            <br><br>

    <%= f.submit %>

<% end %>
